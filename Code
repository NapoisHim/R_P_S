#include <iostream>
#include <string>
using namespace std;

int main() 
{
    string choice = "rock"; "paper"; "scissors";
    while (choice != "exit") 
    {
    cout << "Choose rock, paper, or scissors. Enter exit to stop\n";
    cin >> choice;
        
        if (choice == "rock") 
        {
            cout << " I choose paper\n";
        }
            else if (choice == "paper")
            {
                cout << " I choose scissors\n";
            }
                else if (choice == "scissors")
                {
                    cout << " I choose rock\n";
                }
    }
}
